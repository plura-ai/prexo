{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "concurrency": "100%",
  "daemon": true,
  "envMode": "strict",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "env": [
        "UPSTASH_VECTOR_REST_URL",
        "UPSTASH_VECTOR_REST_TOKEN",
        "TOGETHER_API_KEY",
        "OPENAI_API_KEY",
        "DATABASE_URL",
        "DIRECT_DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "POLAR_ACCESS_TOKEN",
        "POLAR_WEBHOOK_SECRET",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "DISCORD_CLIENT_ID",
        "DISCORD_CLIENT_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "BASE_API_URL",
        "UNKEY_ROOT_API_KEY",
        "UNKEY_API_ID",
        "PREXO_API_KEY",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "TRIGGER_SECRET_KEY",
        "OCR_SPACE_API_KEY",
        "RESEND_API_KEY",
        "NEXT_PUBLIC_POSTHOG_KEY",
        "NEXT_PUBLIC_POSTHOG_HOST",
        "LOGS_WEBHOOK_URL"
      ],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },

    "scanner": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    }
  }
}
